{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "prettier",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",   // Allows the use of console.log (optional)
    "prettier/prettier": "error",  // Integrates Prettier to enforce code formatting rules
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]  // Ignores unused variables that start with an underscore
  }
}
